<LinearLayout
    android:id="@+id/left_drawer_add_server"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/material_248dp"
    android:layout_height="@dimen/material_48dp"
    android:paddingTop="@dimen/material_32dp"
    android:paddingBottom="@dimen/material_32dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/material_8dp"
        android:src="@drawable/ic_add"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/material_8dp"
        android:text="@string/drawer.add"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"/>
</LinearLayout>